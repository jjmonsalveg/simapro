-#= provide(:title, "#{current_user.unidad_ordenacion.reserva_forestal.nombre rescue 'Simapro'} - Cuencas")
.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-10
    %h2
      %i.fa.fa-pagelines
      -#= current_user.unidad_ordenacion.reserva_forestal.nombre rescue 'Reserva'
      -#\- Cuencas
    %ol.breadcrumb
      %li
        = link_to 'Inicio', root_url
      %li.active
        %strong
          -#Cuencas
.wrapper.wrapper-content.animated.fadeInRight#pagina_index_tiendas
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-content
          .row
            .col-sm-3
              = link_to new_<%= singular_table_name %>_path, class: 'btn btn-primary btn-responsive' do
                Nueva <%= human_name %>
                %i.fa.fa-plus
          %br
          %br
          .row
            .col-md-12
              .table-responsive
                %table.table.table-striped.table-bordered.table-hover.datatable-table
                  %thead
                    %tr
<% for attribute in attributes -%>
                      %th <%= attribute.human_name %>
<% end -%>
                      %th
                      %th
                  %tbody
                    - @<%= plural_table_name %>.each do |<%= singular_table_name %>|
                      %tr
<% for attribute in attributes -%>
                        %td= <%= singular_table_name %>.<%= attribute.name %>
<% end -%>
                        %td
                          = link_to <%= singular_table_name %>,  rel: 'tooltip',  title: 'Ver' do
                            %i.fa.fa-search
                            &nbsp;
                            &nbsp;
                          = link_to edit_<%= singular_table_name %>_path(<%= singular_table_name %>), 'data-toggle'=> 'tooltip', 'data-placement' => 'left',  'title' => 'Editar' do
                            %i.fa.fa-edit
                            &nbsp;
                            &nbsp;
                          = link_to <%= singular_table_name %>, data: { confirm: '¿Está seguro de realizar esta acción?' }, method: :delete, 'data-toggle'=> 'tooltip', 'data-placement' => 'left',  'title' => 'Eliminar' do
                            %i.fa.fa-trash
                        %td