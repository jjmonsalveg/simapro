= form_for @unidad_ordenacion, html: { id: 'form_unidad_ordenacion', class: "form-horizontal form_include_ubicacion_territorial", role: "form" } do |f|
  = render 'shared/error_messages', object: f.object, model: 'Unidad de Ordenación'

  .ibox.float-e-margins
    .ibox-content.border-bottom.form-horizontal
      .form-group
        = f.label :reserva_forestal, for: :reserva_forestal_id, class: 'col-sm-2 control-label'
        .col-sm-10
          = f.select(:reserva_forestal_id, [['Seleccione Opción']] + @reserva_forestales.collect {|p| [p.nombre, p.id]}, {}, { id: :reserva_forestal_id, class: 'form-control'})
      .form-group
        = f.label :codigo, class: 'col-sm-2 control-label'
        .col-sm-10
          = f.text_field :codigo, class: 'form-control'
      .form-group
        = f.label :nro_contrato, class: 'col-sm-2 control-label'
        .col-sm-10
          = f.text_field :nro_contrato, class: 'form-control'
      .form-group
        = f.label :fecha_otorgacion, class: 'col-sm-2 control-label'
        .col-sm-10
          = f.date_select :fecha_otorgacion, class: 'form-control'
      .form-group
        = f.label :fecha_vence, class: 'col-sm-2 control-label'
        .col-sm-10
          = f.date_select :fecha_vence, class: 'form-control'
      .form-group
        = f.label :area, class: 'col-sm-2 control-label'
        .col-sm-10
          = f.text_field :area, class: 'form-control'
      .form-group
        = f.label :descripcion, class: 'col-sm-2 control-label'
        .col-sm-10
          = f.text_area :descripcion, class: 'form-control', rows: 5
      =render 'shared/documentos/show_modelo_documentos_no_paginados', model: f, list_documents: load_documentos(:unidad_ordenacion_docs, @unidad_ordenacion,true)
      .form-group
        =render 'shared/ubicacion_territorial/modal', modelo: f
      .form-group
        .col-sm-offset-2.col-sm-10
          = f.submit class: 'btn btn-primary'
