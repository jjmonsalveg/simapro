.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12
      = form_for @grupo_especie, html: { class: "form-horizontal", role: "form" } do |f|
        .row
          .col-md-12
            .ibox.float-e-margins
              .ibox-title.border-bottom.form-horizontal
                %h3
                  Datos
              .ibox-content.border-bottom.form-horizontal
                .form-group
                  = f.label :codigo, class: 'col-sm-2 control-label' do
                    CÃ³digo:
                    %span.fa.fa-asterisk.red
                  .col-sm-10
                    = f.text_field :codigo, class: 'form-control'

                .form-group
                  = f.label :nombre, class: 'col-sm-2 control-label' do
                    Nombre:
                    %span.fa.fa-asterisk.red
                  .col-sm-10
                    = f.text_field :nombre, class: 'form-control'

                .form-group
                  .col-sm-3
                    = link_to grupo_especies_path, class: 'btn btn-success' do
                      %i.fa.fa-arrow-left
                      Regresar
                  .col-sm-3.col-sm-offset-6
                    = f.submit class: 'btn btn-primary'
