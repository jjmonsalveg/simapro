                  %thead
                    %tr

                      %th Codigo

                      %th Nombre

                      %th
                      %th
                  %tbody
                    - @grupo_especies.each do |grupo_especie|
                      %tr

                        %td= grupo_especie.codigo

                        %td= grupo_especie.nombre

                        %td
