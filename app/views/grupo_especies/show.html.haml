= provide(:title, "Simapro - Grupo Especie")
.row.wrapper.border-bottom.white-bg.page-heading
  .col-sm-10
    %h2
      %i.fa.fa-pagelines
      = current_user.unidad_ordenacion.reserva_forestal.nombre rescue ''
      Grupo Especie
    %ol.breadcrumb
      %li
        = link_to 'Inicio', root_url
      %li.active
        %strong
          Información Grupo Especie
.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12.col-md-12.col-sm-12.col-xs-12
      .ibox.float-e-margins
        .ibox-title
          %h3
            Grupo de Especie
        .ibox-content
          .row
            .col-sm-5
              %table.table.table-striped.table-bordered.table-condensed
                %tbody

                  %tr
                    %td.text-right
                      %strong Código:
                    %td
                      = @grupo_especie.codigo

                  %tr
                    %td.text-right
                      %strong Nombre:
                    %td
                      = @grupo_especie.nombre

          .row
            .col-sm-3
              = link_to grupo_especies_path, class: 'btn btn-default' do
                %i.fa.fa-arrow-left
                Regresar
            .col-sm-3
              = link_to edit_grupo_especie_path(@grupo_especie), class: 'btn btn-primary' do
                Editar
                %i.fa.fa-edit