.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12
      = form_for @reserva_forestal, html: { class: "form-horizontal form_include_ubicacion_territorial", role: "form" } do |f|
        .row
          .col-md-12
            .ibox.float-e-margins
              .ibox-title.border-bottom.form-horizontal
                %h3
                  Datos
              .ibox-content.border-bottom.form-horizontal
                .row
                  = render 'shared/error_messages', object: f.object, model: 'Reserva Forestal'
                  .form-group
                    = f.label :nombre, class: 'col-sm-2 control-label' do
                      Nombre:
                      %span.fa.fa-asterisk.red
                    .col-sm-10
                      = f.text_field :nombre, class: 'form-control'
                  .form-group
                    = f.label :abreviado, class: 'col-sm-2 control-label' do
                      Nombre Abreviado:
                      %span.fa.fa-asterisk.red
                    .col-sm-10
                      = f.text_field :abreviado, class: 'form-control'
                  .form-group
                    = f.label :fecha_creacion, class: 'col-sm-2 control-label' do
                      Fecha de Creación:
                      %span.fa.fa-asterisk.red
                    .col-sm-10
                      = f.date_select :fecha_creacion, class: 'form-control', start_year: 1900
                  .form-group
                    = f.label :fecha_reglamento, class: 'col-sm-2 control-label' do
                      Fecha del Reglamento de Uso:
                      %span.fa.fa-asterisk.red
                    .col-sm-10
                      = f.date_select :fecha_reglamento, class: 'form-control', start_year: 1900
                  .form-group
                    = f.label :area, class: 'col-sm-2 control-label' do
                      Área (ha):
                      %span.fa.fa-asterisk.red
                    .col-sm-10
                      = f.text_field :area, class: 'form-control'
                  .form-group
                    = f.label :descripcion, class: 'col-sm-2 control-label' do
                      Descripción:
                    .col-sm-10
                      = f.text_area :descripcion, class: 'form-control', rows: 5
                  =render 'shared/documentos/show_modelo_documentos_no_paginados', model: f, list_documents: load_documentos(:reserva_forestal_docs, @reserva_forestal,true)
                  .form-group
                    =render 'shared/ubicacion_territorial/modal', modelo: f
                  .form-group
                    .col-sm-3
                      = link_to reserva_forestales_path, class: 'btn btn-success btn-block' do
                        %i.fa.fa-arrow-left
                        Volver
                    .col-sm-3.col-sm-offset-6
                      = f.button class: "btn btn-primary btn-block", data: {disable_with: 'Guardar'} do
                        Guardar
                        %i.fa.fa-floppy-o
